{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6"
        ],
        "outDir": "./build",
        "resolveJsonModule": true,
        "strict": true,
   
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "types": [
        "reflect-metadata",
        "jest"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "./src/**/*"
    ]
}